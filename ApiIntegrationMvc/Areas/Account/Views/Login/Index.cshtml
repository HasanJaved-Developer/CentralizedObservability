@using ApiIntegrationMvc.Areas.Account.Models
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
@section Styles{
    <style>
        /* Page-specific centering */
        .login-container {
            height: 100vh;
            display: flex;
            justify-content: center; /* horizontal */
            align-items: center; /* vertical */
        
        }

        body {
            margin-bottom: 60px;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
            padding: 2rem;
        }

        .login-card h2 {
            font-weight: 600;
            color: #2c3e50;
        }
        
        .alert {
            border-radius: 8px;
            margin-top: 1rem;
        }
    </style>
}
<div class="login-container">
    <div class="login-card text-center">
        <h2 class="mb-4">🔗 Integration Portal</h2>

        <form asp-action="Index" asp-controller="Login" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="alert alert-danger text-start"></div>

            <!-- Username with icon -->
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                <input asp-for="Username" class="form-control" placeholder="Username" />
            </div>
            <span asp-validation-for="Username" class="text-danger"></span>

            <!-- Password with icon -->
            <div class="input-group mb-4">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                <input asp-for="Password" class="form-control" placeholder="Password" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }
    </div>
</div>


